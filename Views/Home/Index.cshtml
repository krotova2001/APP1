@model IEnumerable<APP1.Models.Package>

<html>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <body>
<div class="text-center">
    <h2 class="display-4">Введите номер</h2>
   <div class="d-flex flex-row justify-content-center">
     <div style="margin: auto;">
         <form asp-action="GetPackages" asp-controller="home">
        <input class="form-control" type="text" placeholder="10 знаков" id="number">
        <label for="number"></label>
        </form>
      </div>
   </div>
   <p></p>
    <button type="button" class="btn btn-primary">OK</button>
</div>
<footer>
 
<h2>Список предметов</h2>
<table class="table">
     <tr><th>Имя</th><th>Возраст</th></tr>
   
     @foreach (var item in Model)
    {
        <tr>
            <td>@item.Number</td>
            <td>@item.RegDate</td>
        </tr>
    }
</table>

</footer>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</html>
