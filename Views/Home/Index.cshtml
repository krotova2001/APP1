@model APP1.Models.Package

<html>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <body>
<div class="text-center" style="margin-top: 1rem;">
    <h2 class="display-4">Введите номер</h2>
   <div class="d-flex flex-row justify-content-center">
     <div style="margin: 1rem;">
         <form asp-action="Index">
        <input asp-for="RegNumber" class="form-control" type="number" placeholder="10 знаков" >
        <input type="submit" value="Search" class="btn btn-primary"  style="margin: 1rem;"></input>
        </form>
      </div>
      
   </div>
   <p7 style="text-align:center">@ViewBag.Message</p7>
   
   <p></p>
    
</div>
<footer>
    @if(Model!=null)
    {
        <table class="table">
             <tr>
                 <th>Reg Number</th>
                 <th>Reg Date</th>
                 <th>Status</th>
                 <th>Transfer Date</th>
                 <th>Registration Date</th>
                 <th>Registration Number</th>
                 <th>Number</th>
                 <th>Id</th>

             </tr>
            <tr>
                <td>@Model.RegNumber</td>
                <td>@Model.RegDate</td>
                <td>@Model.Status</td>
                <td>@Model.TransferDate</td>
                <td>@Model.RegistrationDate</td>
                <td>@Model.RegistrationNumber</td>
                <td>@Model.Number</td>
                <td>@Model.Id</td>
            </tr>
        </table>
    }
 @*
     На случай, если предметов много
<h2>Список предметов</h2>
<table class="table">
     <tr><th>Имя</th><th>Возраст</th></tr>
   
     @foreach (var item in Model)
    {
        <tr>
            <td>@item.Number</td>
            <td>@item.RegDate</td>
        </tr>
    }
</table>
*@
</footer>
 
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</html>
